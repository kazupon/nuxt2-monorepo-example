{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "types": [
      "@nuxt/types",
      "@types/node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}